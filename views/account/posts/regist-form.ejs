    <title>新規記事登録</title>

    <%- include("../../_share/stylesheets.ejs") %>

  </head>
  <body >
    <a id="skippy" class="sr-only sr-only-focusable" href="#content">
  <div class="container">
    <span class="skiplink-text">Skip to main content</span>
  </div>
</a>

<%- include("../../_share/navbar.ejs") %>

<main role="main" class="container">

  <div class="border-bottom mt-5 mb-5">
    <!-- <h1>Bootstrap starter template</h1> -->
    <h1>新規記事登録</h1>
    <!-- <p class="lead">Use this document as a way to quickly start any new project.<br> All you get is this text and a mostly barebones HTML document.</p> -->
  </div>
  <form method="POST" action="/account/posts/regist/confirm">
    <div class="form-group row">
        <label for="url" class="col-sm-2 col-form-label">URL:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="url" name="url">
        </div>
    </div>
    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">タイトル:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" name="title">
        </div>
    </div>
    <div class="form-group row">
        <label for="content" class="col-sm-2 col-form-label">本文:</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="content" name="content" rows="5"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="keyword" class="col-sm-2 col-form-label">キーワード:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="keyword" name="keyword">
        </div>
    </div>
    <div class="form-group row">
        <label for="author" class="col-sm-2 col-form-label">著者:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="author" name="author">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="確認">
        </div>
    </div>

</form>

</main><!-- /.container -->

<%- include("../../_share/javascripts.ejs") %>

</body>
</html>
